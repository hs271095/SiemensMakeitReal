<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundForHomePage">


    <TextView
        android:id="@+id/timer"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:text="Time:"
        android:textColor="@color/textColorInTextView"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="95dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textColor="@color/textColorInTextView"
        android:fontFamily="monospace"
        android:textSize="20sp"
        android:text="LOOK AT THE FOLLOWING WORDS..!!"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/timer" />

    <TextView
        android:id="@+id/c1"
        android:layout_width="117dp"
        android:layout_height="38dp"
        android:fontFamily="sans-serif"
        android:text="UTENSIL"
        android:textColor="#111111"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginRight="46dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <TextView
        android:id="@+id/w1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="SAUCE PAN"
        android:textColor="@color/textColorInTextView"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/c1"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="@+id/c1"
        android:layout_marginBottom="9dp"
        app:layout_constraintTop_toTopOf="@+id/c1"
        android:layout_marginTop="0dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/w3"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:fontFamily="sans-serif"
        android:text="RED CROSS"
        android:textColor="@color/textColorInTextView"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="-2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/c3"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.548"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/w2"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/c3"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.44"
        android:fontFamily="sans-serif"
        android:text="ORGANISATION"
        android:textColor="#111111"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginRight="46dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/c2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.14999998" />

    <TextView
        android:id="@+id/w2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="TELEGRAM"
        android:textColor="@color/textColorInTextView"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/c2"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/w4"
        app:layout_constraintBottom_toBottomOf="@+id/c2"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/c2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="MESSAGE"
        android:textColor="#111111"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginRight="64dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/c4" />

    <TextView
        android:id="@+id/w4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="CHECKERS"
        android:textColor="@color/textColorInTextView"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/c4"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.186"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/w1" />

    <TextView
        android:id="@+id/c4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="GAME"
        android:textColor="#111111"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginRight="98dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/c1" />

</android.support.constraint.ConstraintLayout>