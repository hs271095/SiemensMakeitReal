<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoubleTapper"
    android:background="@color/backgroundForHomePage">

    <TextView
        android:id="@+id/scoreDouble"
        android:text="Score"
        android:textSize="50dp"
        android:textColor="@color/textColorInTextView"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:paddingTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/leftButton"
        android:text="Tap Me"
        android:textSize="30dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignTop="@+id/rightButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp" />

    <Button
        android:id="@+id/rightButton"
        android:text="Tap Me"
        android:textSize="30dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_below="@+id/scoreDouble"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="102dp" />

</RelativeLayout>
