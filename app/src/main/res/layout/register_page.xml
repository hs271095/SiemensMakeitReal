<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundForHomePage"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="  Register with your details"
        android:textSize="16sp"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:background="@color/backgroundLogin"
        android:textColor="@color/headingsBackground"
        android:fontFamily="sans-serif"
        android:layout_marginEnd="13dp"
        android:id="@+id/textView13"
        tools:ignore="HardcodedText"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="13dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />


    <TextView
        android:text="Enter Name"
        android:fontFamily="sans-serif"
        android:textColor="@color/textColorInTextView"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout5"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_com_name"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorBlack"
        android:fontFamily="sans-serif"
        android:id="@+id/et_com_name"
        android:inputType="textPersonName"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/linearLayout5"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />


    <TextView
        android:text="Enter type"
        android:textColor="@color/textColorInTextView"
        android:textSize="15sp"
        android:fontFamily="sans-serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_type"
        tools:ignore="HardcodedText"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />


    <TextView
        android:text="Enter age"
        android:textColor="@color/textColorInTextView"
        android:textSize="15sp"
        android:fontFamily="sans-serif"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_type"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_age"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorBlack"
        android:id="@+id/et_age"
        android:fontFamily="sans-serif"
        android:inputType="number"
        tools:layout_conversion_absoluteX="114dp"
        tools:layout_conversion_absoluteY="157dp"
        tools:layout_conversion_absoluteWidth="237dp"
        tools:layout_conversion_absoluteHeight="42dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_type"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/et_type"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="26dp" />


    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif"
        android:text="Gender"
        android:textColor="@color/textColorInTextView"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="HardcodedText"
        tools:layout_conversion_absoluteHeight="18dp"
        tools:layout_conversion_absoluteWidth="111dp"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="228dp"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/et_type"
        app:layout_constraintRight_toLeftOf="@+id/gender_mf"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0" />


    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/buttonColor"
        android:text="Register"
        android:textColor="#ffffff"
        android:id="@+id/register_but"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="116dp"
        app:layout_constraintTop_toBottomOf="@+id/gender_mf" />

    <RadioGroup
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:id="@+id/type"
    android:orientation="horizontal"
    app:layout_constraintLeft_toRightOf="@+id/tv_type"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginStart="8dp"
    app:layout_constraintBottom_toBottomOf="@+id/tv_type"
    android:layout_marginEnd="8dp"
    app:layout_constraintHorizontal_bias="0.0"
    android:layout_marginBottom="-26dp">
    <RadioButton
        android:id="@+id/AD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="AD"
        android:textColor="@color/textColorInTextView"
        android:textSize="15sp"
        android:fontFamily="sans-serif"
        android:buttonTint="@color/textColorInTextView"
        tools:layout_editor_absoluteX="232dp"
        tools:layout_editor_absoluteY="187dp"
        />

    <RadioButton
        android:id="@+id/PD"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PD"
        android:textColor="@color/textColorInTextView"
        android:textSize="15sp"
        android:fontFamily="sans-serif"
        android:buttonTint="@color/textColorInTextView"/>
        <RadioButton
            android:id="@+id/none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:text="None"
            android:textColor="@color/textColorInTextView"
            android:textSize="15sp"
            android:fontFamily="sans-serif"
            android:buttonTint="@color/textColorInTextView"
            tools:layout_editor_absoluteX="232dp"
            tools:layout_editor_absoluteY="187dp"
            />
</RadioGroup>

    <RadioGroup
        android:id="@+id/gender_mf"
        android:layout_width="295dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_age">

        <RadioButton
            android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:buttonTint="@color/textColorInTextView"
            android:fontFamily="sans-serif"
            android:text="Male"
            android:textColor="@color/textColorInTextView"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:buttonTint="@color/textColorInTextView"
            android:fontFamily="sans-serif"
            android:text="female"
            android:textColor="@color/textColorInTextView"
            android:textSize="15sp" />
    </RadioGroup>


</android.support.constraint.ConstraintLayout>