<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingPrefix"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PdMainactivity"
    android:background="@color/backgroundForHomePage">

    <TextView
        android:id="@+id/mainTitle"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="@color/textColorInTextView"
        android:layout_gravity="center"
        android:text="@string/PDtitle"
        android:textAlignment="center"
        android:layout_width="376dp"
        android:layout_height="121dp"
        custom:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="0dp"
        custom:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        custom:layout_constraintLeft_toLeftOf="parent"
        custom:layout_constraintHorizontal_bias="1.0"
        tools:layout_editor_absoluteX="8dp" />


    <Button
        android:id="@+id/fingertapButton"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:padding="20dp"
        android:text="@string/PDtapButton"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/button_text_size"
        android:textColor="@color/windowBackground"
        android:background="@color/buttonColor"
        android:layout_marginTop="87dp"
        custom:layout_constraintTop_toBottomOf="@+id/mainTitle"
        android:layout_marginRight="8dp"
        custom:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        custom:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/doubletapButton"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:padding="20dp"
        android:text="@string/PDdoubleButton"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/button_text_size"
        android:textColor="@color/windowBackground"
        android:background="@color/buttonColor"
        android:layout_marginRight="8dp"
        custom:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        custom:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        custom:layout_constraintTop_toBottomOf="@+id/fingertapButton"
        custom:layout_constraintHorizontal_bias="0.5" />


    <Button
        android:id="@+id/PDsubmitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="20dp"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/button_text_size"
        android:textColor="@color/windowBackground"
        android:background="@color/buttonColor"
        android:text="@string/testMe"
        android:textAlignment="center"
        android:layout_marginRight="8dp"
        custom:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        custom:layout_constraintLeft_toLeftOf="parent"
        custom:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="158dp"
        android:layout_marginTop="8dp"
        custom:layout_constraintTop_toBottomOf="@+id/doubletapButton"
        custom:layout_constraintVertical_bias="0.136"
        custom:layout_constraintHorizontal_bias="0.49" />

</android.support.constraint.ConstraintLayout>
